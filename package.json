{
  "name": "niconi-compare",
  "displayName": "Niconi compare",
  "version": "0.0.1",
  "description": "ニコニコ動画の視聴中に動画を比較し続け、あなたの嗜好を自動的にレーティング・ランキング化するブラウザ拡張機能。",
  "author": "horyu <28817604+horyu@users.noreply.github.com>",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "package": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "postinstall": "wxt prepare",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "fix": "pnpm format && pnpm lint",
    "check": "run-p types:check lint:check format:check",
    "types:check": "tsc --noEmit",
    "lint": "oxlint --type-aware --fix && eslint --fix \"./**/*.{ts,tsx}\"",
    "lint:check": "oxlint --type-aware && eslint \"./**/*.{ts,tsx}\"",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build"
  },
  "dependencies": {
    "glicko2-lite": "^5.0.0",
    "immer": "^11.1.3",
    "react": "19.2.4",
    "react-dom": "19.2.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@storybook/addon-themes": "^10.2.7",
    "@storybook/react-vite": "^10.2.7",
    "@tailwindcss/vite": "4.1.18",
    "@testing-library/react": "^16.3.2",
    "@types/chrome": "0.1.36",
    "@types/node": "25.2.0",
    "@types/react": "19.2.13",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/eslint-plugin": "^1.6.6",
    "@vitest/ui": "^4.0.18",
    "@wxt-dev/module-react": "^1.1.5",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-oxlint": "^1.43.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-storybook": "^10.2.7",
    "happy-dom": "^20.5.0",
    "npm-run-all": "^4.1.5",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "oxlint-tsgolint": "^0.11.4",
    "storybook": "^10.2.7",
    "tailwindcss": "4.1.18",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "7.3.1",
    "vitest": "^4.0.18",
    "wxt": "0.20.13"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
