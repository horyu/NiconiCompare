{
  "name": "niconi-compare",
  "displayName": "Niconi compare",
  "version": "0.0.1",
  "description": "ニコニコ動画の視聴中に動画を比較し続け、あなたの嗜好を自動的にレーティング・ランキング化するブラウザ拡張機能。",
  "author": "horyu <28817604+horyu@users.noreply.github.com>",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "package": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "postinstall": "wxt prepare",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "lint": "run-p types:check eslint:check format:check",
    "fix": "run-p eslint format",
    "types:check": "tsc --noEmit",
    "eslint": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "eslint:check": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build"
  },
  "dependencies": {
    "glicko2-lite": "^5.0.0",
    "immer": "^11.1.3",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.7.0",
    "@storybook/addon-themes": "^10.1.11",
    "@storybook/react-vite": "^10.1.11",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "0.1.32",
    "@types/node": "25.0.3",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/eslint-plugin": "^1.6.4",
    "@vitest/ui": "^4.0.16",
    "@wxt-dev/module-react": "^1.1.5",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "happy-dom": "^20.0.11",
    "npm-run-all": "^4.1.5",
    "prettier": "3.7.4",
    "storybook": "^10.1.11",
    "tailwindcss": "^4.1.18",
    "typescript": "5.9.3",
    "vite": "7.3.0",
    "vitest": "^4.0.16",
    "wxt": "0.20.13"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
